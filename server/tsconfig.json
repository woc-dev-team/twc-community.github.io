{
  "compilerOptions": {
    "outDir": "./dist",      
    "rootDir": "./src",      
    "module": "ESNext",    
    "target": "ES6",        
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],   
  "exclude": ["node_modules"]
}